#!/bin/bash

alias ap='clear && sudo create_ap'
alias bash-reload='source $HOME/.bash_profile'
alias bashrc='edit $HOME/.bashrc'
alias battery='upower -i $(upower -e | command grep battery)'
alias cal='LC_ALL=en_EN.utf8 ncal -Mb 2> /dev/null'
alias cls='clear'
alias date='date "+%F_%T"'
alias du='du -h'
alias git-update='command git add -A && command git commit -m "$(command date "+%F_%T")" && command git push -u origin master'
alias gpp='g++ -std=c++17 -g'
alias l='ls -CF'
alias L='ls -CF1'
alias la='ls -a'
alias Ld='ls -lhF --block-size=MiB'
alias less='less -R'
alias lh='ls -a | grep "^\."'
alias list-devices='lsblk'
alias ll='ls -alhF --color | less -R'
alias logout='xfce4-session-logout --logout'
alias mkdir='mkdir -p'
alias mkpasswd='expect_mkpasswd'
alias off='shutdown -h now'
alias op='xdg-open'
alias python='python3'
alias q='exit'
alias qmv='command qmv -v -f "do"'
alias s='sudo "$BASH" -c "$(history -p !!)"'
alias softrestart='sudo service lightdm restart'
alias sudo='sudo '
alias suspend='systemctl suspend'
alias temp='sensors; nvidia-smi; nvidia-smi -q -d temperature; sudo hddtemp /dev/sd?'
alias type='type -a'
alias vi='vi -p'
alias vim-update-plugins='vim +PlugUpgrade +PlugUpdate +qa'
alias vimrc='edit $HOME/.vimrc'
alias volume='amixer -- set Master'
alias wicd='wicd-curses'
alias wifi-restart='sudo rfkill block wifi && sudo rfkill unblock wifi'
alias wine-lnk='env WINEPREFIX="$HOME/.wine" wine C:\\windows\\command\\start.exe /Unix'
alias yt-dl-mp3='youtube-dl -x --audio-format mp3'
