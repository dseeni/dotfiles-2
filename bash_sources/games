#!/bin/bash

game() {
    steam_id()
    {
        steam steam://rungameid/$1 & disown
    }

    exiter=1
    case "$1" in
        1|01|steam)
            steam & disown
            ;;
        2|02|dosbox)
            dosbox & disown
            ;;
        3|03|minecraft)
            java -jar $HOME/games/Minecraft.jar & disown
            ;;
        4|04|terraria)
            steam_id 105600
            ;;
        5|05|dont-starve)
            steam_id 219740
            ;;
        6|06|ftl)
            steam_id 212680
            ;;
        7|07|zelda-classic)
            cd $HOME/games/ZeldaClassic/
            ./zelda-l & disown
            ;;
        8|08|katawa-shoujo)
            cd $HOME/games/Katawa_Shoujo/
            ./Katawa\ Shoujo.sh & disown
            ;;
        9|09|hacknet)
            steam_id 365450
            ;;
        10|ddlc)
            cd $HOME/games/DDLC
            ./DDLC.sh & disown
            ;;
        *)
            clear
            echo "01 | Steam"
            echo "02 | DOSbox"
            echo "03 | Minecraft"
            echo "04 | Terraria"
            echo "05 | Don't Starve"
            echo "06 | FTL: Faster Than Light"
            echo "07 | Zelda Classic"
            echo "08 | Katawa Shoujo"
            echo "09 | Hacknet"
            echo "10 | Doki Doki Literature Club!"

            echo ""
            echo "e) Edit"
            echo "q) Quit"
            echo ""
            printf 'Choose: '
            read -r option
            if [ $option = "e" -o $option = "edit" ]; then
                exiter=0
                edit $HOME/.bash_sources/games
            elif [ $option = "q" -o $option = "quit" ]; then
                exiter=0
            else
                game $option
            fi
            ;;
    esac
    if [ $exiter = 1 ]; then
        exit
    fi
}
