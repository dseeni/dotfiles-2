#!/bin/bash


rm-inum()
{
    find . -inum $1 -delete
}

windows()
{
    sudo grub-reboot 2
    reboot
}

fuse-umnt()
{
    fusermount -u $@
}

apt()
{
    if [ $1 == "purge" ]
    then
        shift 1
        command sudo apt purge --auto-remove $@
    else
        command sudo apt $@
    fi
}

term-title()
{
    title=$@
    wmctrl -r :ACTIVE: -N "$title"
}

install-essentials()
{
    while IFS= read -r app
    do
        list=$list' '$(echo $app | cut -f1 -d"#")
    done < "$HOME/.essential-software.list"

    command sudo apt install $list
}
